<div class="modal fade bd-example-modal-lg" id="modal-ajout" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div id="fermer-modal-ajout" data-toggle="modal" data-target=".bd-example-modal-lg" data-backdrop="static">
          <i class="fas fa-times"></i>
        </div>
        <div class="conteneur-modal-ajout">
          <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-7">
              <h1>Memories#new</h1>
              <%= simple_form_for [@memory] do |f| %>
                <%= f.input :memory_type, disabled: true, input_html: { id: 'special_categorie' }, as: :hidden  %>
                <%= f.input :title %>
                <%= f.input :description %>
                <%= f.input :photo %>
                <%= f.input :photo_cache, as: :hidden %>
                <%= f.simple_fields_for :stamps do |stamp| %>
                  <%= stamp.input :title, label: 'Stamps' %>
                <% end %>
                <%= f.submit 'Add a memory', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
