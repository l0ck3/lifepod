<div class="navbar-wagon">
  <% if user_signed_in? %>

    <div class="navbar-wagon-left">
      <!-- Logo -->
      <%= link_to root_path do %>
        <%= image_tag "logo.svg" %>
      <% end %>
      <div class="navbar-searchbar d-none d-lg-block d-xl-block">
        <%= render 'shared/searchbar' %>
      </div>
    </div>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right d-none d-md-flex">

      <!-- Links when logged in -->
      <% if ((params["controller"] == "memboard") || ((params["controller"] == "memories") && ((params["action"] == "index") || (params["action"] == "show")))) %>
        <%= link_to "Explore", memboard_path, class: "btn boutton-rouge boutton-rouge-border" %>
        <%= link_to "Add a memory", add_path, class: "btn boutton-rouge boutton-rouge-inside", id: "add" %>
      <% else %>
        <%= link_to "Explore", memboard_path, class: "btn boutton-rouge boutton-rouge-inside" %>
        <%= link_to "Add a memory", add_path, class: "btn boutton-rouge boutton-rouge-border", id: "add" %>
      <% end %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.profile_picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown", gravity: :face %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to dashboard_path do %>
                <span><i class="fas fa-chart-line"></i> Dashboard</span>
              <% end %>
            </li>
            <li>
              <%= link_to profile_path do %>
                <span><i class="fas fa-user"></i> Profile</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: " Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Dropdown appearing on mobile only -->
    <div class="navbar-wagon-item d-block d-md-none">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to memboard_path do %>
            <span><i class="fas fa-search"></i></i>Explore</span>
            <% end %>
          </li>
          <li>
            <%= link_to add_path do %>
            <span><i class="fas fa-plus-circle"></i>Add a memory</span>
            <% end %>
          </li>
          <li>
              <%= link_to dashboard_path do %>
                <span><i class="fas fa-chart-line"></i> Dashboard</span>
              <% end %>
            </li>
          <li><%= link_to profile_path do %>
                  <span><i class="fas fa-user"></i> Profile</span>
                <% end %></li>
          <li><%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: " Log out") %>
                <% end %></li>
        </ul>
      </div>
    </div>

  <% else %>
      <!-- Logo -->
    <%= link_to root_path do %>
      <%= image_tag "logo.svg" %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right d-none d-lg-block d-xl-block">
      <!-- Login link (when logged out) -->
      <div class="button-container">
        <%= link_to "Sign In", "users/sign_in", class: "btn boutton-rouge boutton-rouge-inside sign" %>
      </div>
    </div>

  <% end %>
</div>







