
<div class="conteneur-memories" id="container">
  <h1 class="text-center font-weight-bold">Here is the best content we have selected for you</h1>
</div>

<div class="row">
  <div class="d-none d-md-block col-md-2">
  </div>

  <div class="col-xs-12 col-sm-10 col-md-8">
    <div class="card-columns">
      <div class="card card-pola" id="versCategories">
        <div class="image-container">
          <div class="card-img" id="fixed">
            <h3 class="text-center font-weight-bold">Add a memory from another source</h3>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text">Add your <strong>personal content</strong></p>
        </div>
      </div>
      <% unless @spotify_memories.nil? %>
        <% @spotify_memories.each do |memory|%>
          <div class="card">
            <div class="card-pola">
              <div class="image-container" data-toggle="modal" data-target="#modal-suggestion-spotify_<%= memory.id %>">
                <%= image_tag memory.image_associated, id: "box", class: "card-img"%>
                <h2><%= memory.description %></h2>
                <h3><%= memory.title.capitalize %></h3>
                <div class="card-img-overlay">
                  <i class="fas fa-compact-disc"></i>
                </div>
              </div>
              <div class="card-body">
                <p>Suggested from <strong>Spotify</strong></p>
                <p><strong>Top 50</strong> listenings</p>
              </div>
            </div>
          </div>
        <% end%>
      <% end%>
    </div>
  </div>

  <div class="d-none d-md-block col-md-2">
  </div>

</div>

<div class="small-display-categories" id="mySmallFooter">
  <div class="small-conteneur-ajout">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-4">
            <div class="small-item-categories" data-categorie="photo">
              <i class="fas fa-image selected-picto"></i>
            </div>
          </div>
          <div class="col-md-4">
            <div class="small-item-categories" data-categorie="video">
              <%= link_to modal_video_path do%>
                <i class="fas fa-video"></i>
              <% end  %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="small-item-categories" data-categorie="quote">
              <%= link_to modal_quote_path do%>
                <i class="fas fa-quote-right"></i>
              <% end  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- MODAL PHOTO -->

<div class="modal fade bd-example-modal-lg" id="photo" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div id="fermer-modal-ajout" data-toggle="modal" data-target=".bd-example-modal-lg" data-backdrop="static">
          <%= link_to add_path do%>
            <i class="fas fa-times"></i>
          <% end  %>
        </div>
        <div class="conteneur-modal-ajout">
          <h1 id='titre-ajout'>Add a photo memory</h1>
          <%= simple_form_for [@memory] do |f| %>
            <div class="row">
              <div class="col-xs-12 col-md-5">
                <div class="cadre-photo img-fluid" alt="Responsive image">
                  <%= cl_image_upload_tag(:image_id)%>
                </div>
              </div>
              <div class="col-xs-12 col-md-7">
                <%= f.input :memory_type, input_html: { id: 'special_categorie', value: "photo" }, as: :hidden, require: true  %>
                <%= f.input :title, label: 'Your photo name', require: true %>
                <%= f.input :description, label: 'Tell me more about this photo' %>
                <%= f.label 'Your stamps*', autofocus: true %>
                <div class="stamps-form">
                  <%= select_tag 'memory[stamps][]', options_for_select(Stamp.all.pluck(:title)), multiple: 'multiple', class: 'form-control select2'%>
                </div>
              </div>
              <div class="submit-add-button">
                <%= f.submit 'Add a memory', class: "btn boutton-rouge boutton-rouge-inside" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for(:js) do %>
  <script>
    $('#photo').modal('show');
    $(function() {
      if($.fn.cloudinary_fileupload !== undefined) {
        $("input.cloudinary-fileupload[type=file]").cloudinary_fileupload();
      }
    });

    function cloudinaryPreview() {
      $('.cloudinary-fileupload').bind('cloudinarydone', function(e, data) {
        console.log(data)
        $('.cadre-photo').html(
          $.cloudinary.image(data.result.public_id,
            { format: data.result.format, version: data.result.version,
              class: "img-fluid"})
        );
        $('.image_id').val(data.result.public_id);
        return true;
      });
    }
    cloudinaryPreview()
  </script>
<% end %>
