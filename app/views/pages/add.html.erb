<div class="conteneur-memories" id="container">
  <h1 class="text-center font-weight-bold d-none d-md-block">Here is the best content we have selected for you</h1>
</div>

<div class="row">
  <div class="d-none d-md-block col-md-2">
  </div>

  <div class="col-xs-12 col-sm-10 col-md-8">
    <div class="card-columns">
      <div class="card card-pola" id="versCategories">
        <div class="image-container">
          <div class="card-img" id="fixed">
            <h3 class="text-center font-weight-bold">Add a memory from another source</h3>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text">Add your <strong>personal content</strong></p>
        </div>
      </div>
      <% unless @memories.nil? %>
        <% @memories.each do |memory|%>
          <% if memory.memory_type == "spotify" %>
            <div class="card">
              <div class="card-pola">
                <div class="image-container" data-toggle="modal" data-target="#modal-suggestion-spotify_<%= memory.id %>">
                  <%= image_tag memory.image_associated, class: "card-img flex"%>
                  <h2><%= memory.description %></h2>
                  <h3><%= memory.title.capitalize %></h3>
                    <%= image_tag "spotify-blanc-2.svg", class: "center" %>
                </div>
                <div class="card-body">
                  <p>Suggested from <strong>Spotify</strong></p>
                  <p><strong>Top 50</strong> listenings</p>
                </div>
              </div>
            </div>
          <% elsif memory.memory_type == "instagram" %>
            <div class="card">
              <div class="card-pola">
                <div class="image-container" data-toggle="modal" data-target="#modal-suggestion-instagram<%= memory.id %>">
                  <%= image_tag memory.image_associated, id: "box", class: "card-img"%>
                  <h3><%= memory.title.capitalize %></h3>
                  <%= image_tag "instagram-blanc-2.svg", class: "center2" %>
                </div>
                  <div class="card-body">
                    <p>Suggested from <strong>Instagram</strong></p>
                    <p><strong>Liked <%= memory.likes %> times</strong></p>
                  </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end%>
    </div>
  </div>






  <div class="d-none d-md-block col-md-2">
  </div>

</div>

<%= render 'shared/footerbleu' %>

<%= render 'shared/smallfooterbleu' %>

<% unless @memories.nil? %>
  <% @memories.each do |memory|%>
    <% if memory.memory_type == "spotify" %>
      <%= render 'shared/modalsuggespotify', memory: memory %>
    <% elsif memory.memory_type == "instagram" %>
      <%= render 'shared/modalsuggeinstagram', memory: memory %>
    <% end %>
  <% end %>
<% end %>



<%= javascript_pack_tag 'smallFooter' %>
<%= javascript_pack_tag 'footer' %>
