<%= render 'shared/dashboard' %>

<div id="sidebar">
  <h4 class="text-right">Stamps</h4>
  <div class="top-space">
    <% @stamps.split.each do |stamp|%>
      <%= image_tag "stamp-rouge.svg"%>
    <% end%>
  </div>
</div>

<div id="page-content">
  <div class="container">
    <div class="card-columns">
      <% @memories.each do |memory|%>
        <div class="card macard">
          <div class="image-container">
            <%= image_tag "boxes/1.svg", id: "box", class: "card-img"%>
            <p class="calendar-left" type="date"><%=memory.created_at.strftime('%Y-%m-%d')%></p>
            <h3><%= memory.title %></h3>
          </div>
          <div class="card-body">
          </div>
        </div>
      <% end%>
    </div>
  </div>
</div>



